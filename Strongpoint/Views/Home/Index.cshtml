            success: function (data) {
                $('<option />', { value: '', text: 'SELECT' }).appendTo(leverendørDropDown);
                $.each(data, function (i, item) {
                    $('<option />', { value: item.id, text: item.navn }).appendTo(leverendørDropDown);
                });
                leverendørDropDown.appendTo('#leverendør');
            }
        });
